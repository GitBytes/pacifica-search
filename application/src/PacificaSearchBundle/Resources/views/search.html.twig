<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Pacifica Search</title>
    <link rel="stylesheet" href="css/search_layout.css">
    <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
    <script src="js/namespace.js"></script>
    <script src="js/utilities.js"></script>
    <script src="js/dom_manager.js"></script>
    <script src="js/filter.js"></script>
    <script src="js/pacifica_search.js"></script>
</head>
<body>
    <button id="pacifica_search_button">Search</button>

    {% for collection in filters %}
        <fieldset data-type="{{ collection.machineName }}">
            <h2>{{ collection.typeDisplayName }}</h2>
            {% for instance in collection.instances %}
                {% set input_id = collection.machineName ~ "_" ~ instance.id %}
                <label for="{{ input_id }}">
                    {{ instance.displayName }}
                    <input type="checkbox" id="{{ input_id }}" data-id="{{ instance.id }}">
                </label>
            {% endfor %}
        </fieldset>
    {% endfor %}
</body>
</html>